# AI Provider Configuration
# Choose one: anthropic, openai, or perplexity
AI_PROVIDER=perplexity

# Anthropic (Claude) API Key
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (if using OpenAI)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Perplexity API Key
# Get your key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Model Selection
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
OPENAI_MODEL=gpt-4-turbo-preview
PERPLEXITY_MODEL=llama-3.1-sonar-large-128k-online

# Search Configuration
# Options: duckduckgo (free), serper, serpapi
SEARCH_ENGINE=duckduckgo

# Serper API Key (if using Serper)
# Get your key from: https://serper.dev/
SERPER_API_KEY=your_serper_api_key_here

# SerpAPI Key (if using SerpAPI)
# Get your key from: https://serpapi.com/
SERPAPI_KEY=your_serpapi_key_here

# Research Configuration
MAX_SEARCH_RESULTS=10
MAX_SOURCES_TO_ANALYZE=5
REPORT_OUTPUT_DIR=data/reports

# Storage Configuration
DATABASE_PATH=data/research.db
CACHE_DIR=data/cache
ENABLE_VECTOR_STORE=false

# Vector Store Configuration (if enabled)
VECTOR_STORE_TYPE=chromadb
VECTOR_STORE_PATH=data/vector_store

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/research_agent.log
